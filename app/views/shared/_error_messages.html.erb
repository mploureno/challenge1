<% if object.errors.any? %>
  <div id="modal" class="modal">
    <div class="modal__wrapper">
      <h2><%= t('.validation_failed') %></h2>
      <span class="modal__close">&times;</span>
      <div>
        <ul>
          <% object.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>

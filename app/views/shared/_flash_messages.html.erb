<% flash.each do |type, value| %>
  <div id="modal" class="flash flash--<%= "#{type}" %>">
    <% if value.kind_of?(Array) %>
      <ul>
        <% value.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% else %>
      <%= value %>
    <% end %>
  </div>
<% end %>
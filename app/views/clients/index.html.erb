<div class="table-wrapper">
  <table>
    <thead>
      <tr>
        <th><%= t('.legend') %></th>
        <th><%= t('.email') %></th>
        <th><%= t('.phone') %></th>
        <th><i class="fa fa-cogs" aria-hidden="true"></i></th>
      </tr>
    </thead>
    <tbody>
      <tr class="table-row">
      <% unless current_user.clients.exists? %>
        <%= link_to new_client_path, class: 'btn--tab' do %>
          <i class="fa fa-user-plus" aria-hidden="true"></i>
          <%= t('.empty') %>
        <% end %>
      <% end %>
      </tr>
      <% @clients.each do |client| %>
      <tr class="table-row">
        <td><%= "#{client.first_name} #{client.last_name}" %></td>
        <td><%= "#{client.email}" %></td>
        <td><%= "#{client.mobile_phone}" %></td>
        <td>
        <%= link_to edit_client_path(client), class: 'btn--link'  do %>
          <span><%= t('.edit') %></span>
          <i class="fas fa-pencil-alt" aria-hidden="true"></i>
        <% end %>
        <%= link_to client_path(client), class: 'btn--link', method: :delete, data: { confirm: t('.confirmation') } do %>
          <span><%= t('.delete') %></span>
          <i class="fas fa-trash" aria-hidden="true"></i>
        <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="list-container">
<% unless current_user.clients.exists? %>
  <%= link_to new_client_path, class: 'btn btn--tab' do %>
    <i class="fa fa-user-plus" aria-hidden="true"></i>
    <%= t('.empty') %>
  <% end %>
<% end %>

<% @clients.each do |client| %>
  <%= link_to client_path(client) do %>
    <ul class="list">
      <li class="list__item">
        <%= "#{client.first_name} #{client.last_name}" %>
        <span class="list__detail">
          <%= "#{client.email}" %>
        </span>
        <span class="list__detail">
          <%= "last updated #{client.updated_at}" %>
        </span>
      </li>
    </ul>
  <% end %>
<% end %>
</div>

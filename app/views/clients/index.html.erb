<div class="list-container">
  <% @clients.each do |client| %>
    <%= link_to client_path(client) do %>
      <ul class="list">
        <li class="list__item">
          <%= "#{client.first_name} #{client.last_name}" %>
          <span class="list__detail">
            <%= "#{client.email}" %>
          </span>
          <span class="list__detail">
            <%= "last updated #{client.updated_at}" %>
          </span>
        </li>
      </ul>
    <% end %>
  <% end %>
</div>

<div class="table-wrapper">
<% if current_user.clients.exists? %>
  <table>
    <thead>
      <tr>
        <th><%= t('.legend') %></th>
        <th><%= t('.email') %></th>
        <th><%= t('.phone') %></th>
        <th><i class="fa fa-cogs" aria-hidden="true"></i></th>
      </tr>
    </thead>
    <tbody>
    <% @clients.each do |client| %>
      <tr class="table-row">
        <td><%= "#{client.first_name} #{client.last_name}" %></td>
        <td><%= "#{client.email}" %></td>
        <td><%= "#{client.mobile_phone}" %></td>
        <td>
          <%= link_to edit_client_path(client), class: 'btn--link'  do %>
            <span><%= t('.edit') %></span>
            <i class="fas fa-pencil-alt" aria-hidden="true"></i>
          <% end %>
          <%= link_to client_path(client), class: 'btn--link', method: :delete, data: { confirm: t('.confirmation') } do %>
            <span><%= t('.delete') %></span>
            <i class="fas fa-trash" aria-hidden="true"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <p class="empty">
    <%= t('.empty') %>
  </p>
<% end %>
</div>
